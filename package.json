{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "scripts": {
    "precommit": "git diff --cached --name-only | grep -e '\\.js$' | xargs eslint",
    "lint": "eslint --fix common/ server/ client/",
    "test": "jest --no-cache",
    "preview": "start-storybook -p 9001 -c .preview",
    "start": "DEBUG=react-boilerplate:* node server/index.js",
    "start-with-ssr": "SSR=true DEBUG=react-boilerplate:* node server/index.js",
    "start-prod": "NODE_ENV=production DEBUG=react-boilerplate:* node server/index.js",
    "build-core": "webpack --profile --json > stats.json",
    "build": "rm -rf dist && NODE_ENV=production npm run build-core",
    "build-develop": "NODE_ENV=development webpack",
    "build-staging": "rm -rf dist && NODE_ENV=staging npm run build-core"
  },
  "dependencies": {
    "babel-core": "6.24.0",
    "babel-loader": "6.4.1",
    "babel-plugin-module-resolver": "2.7.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.24.0",
    "babel-plugin-transform-exponentiation-operator": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-es2016": "6.22.0",
    "babel-preset-es2017": "6.22.0",
    "babel-preset-react": "6.23.0",
    "babel-register": "6.24.0",
    "babel-runtime": "6.23.0",
    "debug": "2.6.3",
    "express": "4.15.2",
    "file-loader": "0.11.0",
    "jss": "6.5.0",
    "jss-preset-default": "1.3.1",
    "murmurhash-js": "1.0.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-jss": "5.4.0",
    "react-redux": "5.0.3",
    "react-router": "3.0.3",
    "react-router-redux": "4.0.8",
    "redux": "3.6.0",
    "redux-dynamic-middlewares": "0.1.3",
    "redux-logger": "3.0.1",
    "redux-thunk": "2.2.0",
    "webpack": "2.3.2"
  },
  "devDependencies": {
    "@kadira/storybook": "2.35.3",
    "babel-eslint": "7.2.1",
    "babel-jest": "19.0.0",
    "enzyme": "2.8.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-import-resolver-babel-module": "3.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "husky": "0.13.3",
    "jest": "19.0.2",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.1"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "es2016",
      "es2017",
      "react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "common": "./common"
          }
        }
      ],
      "babel-plugin-transform-object-rest-spread",
      "babel-plugin-transform-exponentiation-operator"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "timers": "fake",
    "verbose": true,
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!redux-plupload)"
    ],
    "globals": {
      "__LOC__": true,
      "__BROWSER__": true,
      "__DEV__": true,
      "__PRELOADED_STATE__": {}
    }
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "__BROWSER__": true,
      "__DEV__": true,
      "__LOC__": true,
      "__PROJECT__": true,
      "document": true,
      "window": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "rules": {
      "global-require": 0,
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "comma-dangle": [
        2,
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ],
      "no-console": 0,
      "semi": [
        2,
        "never"
      ],
      "import/extensions": 0,
      "import/no-unresolved": 1,
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": [
        1,
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.spec.js"
          ]
        }
      ],
      "jsx-a11y/img-has-alt": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/href-no-hash": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0,
      "react/no-array-index-key": 0,
      "react/prop-types": 0,
      "react/prefer-stateless-function": 0,
      "angular/document-service": 0,
      "angular/json-functions": 0,
      "angular/controller-name": 0,
      "angular/window-service": 0,
      "angular/timeout-service": 0,
      "angular/typecheck-array": 0,
      "angular/typecheck-object": 0,
      "angular/typecheck-string": 0,
      "angular/definedundefined": 0,
      "angular/log": 0
    }
  }
}
